---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import {
  Card,
  CardHeader,
  CardTitle,
  CardDescription,
  CardContent,
} from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Find featured post
const featuredPost = posts.find((post) => post.data.isFeatured);
---

<BaseLayout bodyClass="bg-background">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header Section -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight text-foreground mb-4">
        Blog
      </h1>
      <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
        Thoughts, tutorials, and insights about web development, technology, and
        more.
      </p>
    </div>

    <!-- Featured Post -->
    {
      featuredPost && (
        <div class="mb-12">
          <h2 class="text-2xl font-semibold mb-6 text-foreground">
            Featured Post
          </h2>
          <Card className="overflow-hidden hover:shadow-lg transition-shadow duration-300">
            <a
              href={`/blog/${featuredPost.data.slug || featuredPost.id}/`}
              class="block"
            >
              <CardHeader className="pb-4">
                <div class="flex items-center justify-between mb-2">
                  <Badge variant="secondary">Featured</Badge>
                  <span class="text-sm text-muted-foreground">
                    <FormattedDate date={featuredPost.data.pubDate} />
                  </span>
                </div>
                <CardTitle className="text-2xl mb-2 hover:text-primary transition-colors">
                  {featuredPost.data.title}
                </CardTitle>
                {featuredPost.data.description && (
                  <CardDescription className="text-base">
                    {featuredPost.data.description}
                  </CardDescription>
                )}
              </CardHeader>
              <CardContent className="pt-0">
                {featuredPost.data.tech.map((tech) => {
                  return (
                    <Badge variant="secondary" className="text-xs mr-1 mb-1">
                      {tech}
                    </Badge>
                  );
                })}
              </CardContent>
            </a>
          </Card>
        </div>
      )
    }

    <!-- All Posts Grid -->
    <div class="mb-8">
      <h2 class="text-2xl font-semibold mb-6 text-foreground">All Posts</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          posts.map((post) => (
            <Card className="h-full hover:shadow-lg transition-all duration-300 hover:scale-[1.02]">
              <a
                href={`/blog/${post.data.slug || post.id}/`}
                class="block h-full"
              >
                <CardHeader className="pb-2">
                  <div class="flex items-center justify-between mb-3">
                    <Badge variant="outline" className="text-xs">
                      Article
                    </Badge>
                    <span class="text-xs text-muted-foreground">
                      <FormattedDate date={post.data.pubDate} />
                    </span>
                  </div>
                  <CardTitle className="text-lg leading-tight mb-2 hover:text-primary transition-colors line-clamp-2">
                    {post.data.title}
                  </CardTitle>
                  {post.data.description && (
                    <CardDescription className="text-sm line-clamp-3">
                      {post.data.description}
                    </CardDescription>
                  )}
                </CardHeader>
                <CardContent className="pt-0">
                  {post.data.tech.map((tech) => {
                    return (
                      <Badge variant="secondary" className="text-xs mr-1 mb-1">
                        {tech}
                      </Badge>
                    );
                  })}
                </CardContent>
              </a>
            </Card>
          ))
        }
      </div>
    </div>

    <!-- Empty State -->
    {
      posts.length === 0 && (
        <div class="text-center py-12">
          <div class="mx-auto max-w-md">
            <h3 class="text-lg font-semibold text-foreground mb-2">
              No posts yet
            </h3>
            <p class="text-muted-foreground">
              Check back later for new blog posts and articles.
            </p>
          </div>
        </div>
      )
    }
  </div>
</BaseLayout>
