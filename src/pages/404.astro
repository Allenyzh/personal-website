---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout bodyClass="bg-background">
  <div class="flex-1 flex flex-col items-center justify-center text-center">
    <h1 class="text-4xl font-bold tracking-tight text-foreground mb-4">
      404 - Page Not Found
    </h1>
    <p class="text-xl text-muted-foreground">
      The page you are looking for does not exist or has been moved.
    </p>
    <a
      href="/"
      class="mt-6 inline-block bg-foreground text-white px-4 py-2 rounded hover:bg-secondary transition-colors"
    >
      Go to Home
    </a>
  </div>
</BaseLayout>
